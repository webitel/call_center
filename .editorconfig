# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.go]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# JetBrains-specific: disable import auto-organize
ij_go_imports_on_the_fly = false
ij_go_optimize_imports = false
ij_go_run_go_fmt_on_reformat = false

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 2

[*.star]
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
